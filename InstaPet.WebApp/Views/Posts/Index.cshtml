@model IEnumerable<InstaPet.DomainModel.Entities.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Posts from @ViewBag.Creator.Name</h1>

<p>
    <a asp-controller="Posts" asp-action="Create" asp-route-id="@ViewBag.Creator.Id">New Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                Photo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <img src="@item.PhotoUrl" style="max-width:200px;height:auto" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDateTime)
            </td>
            <td>
                <a asp-controller="Comments" asp-action="Index" asp-route-id="@item.Id">Comments</a>
            </td>
        </tr>
}
    </tbody>
</table>
